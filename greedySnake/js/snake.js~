function Snake(canvas) {
    this.x = 0;
    this.y = 0;
    this.speedX = 1;
    this.speedY = 0;
    this.canvas = canvas;
    this.update = function() {
	var maxX = canvas.style.width;
	var maxY = canvas.style.height;
	console.log(maxX);
	var context = canvas.getContext('2d');
	var afterX = this.x + this.speedX;
	var afterY = this.y + this.speedY;
	
	context.fillStyle = canvas.style.backgroundColor;
	context.fillRect(this.x, this.y, 10, 10);
	
	//Boundary Conditions Reset
	if(afterX > maxX) {
	    this.x = afterX - maxX;
	}else
	if(afterX < 0) {
	    this.x = afterX + maxX;
	}else
	if(afterY > maxY) {
	    this.y = afterY -  maxY;
	}
	else
	if(afterY < 0) {
	    this.y = afterY +  maxY;
	}else {
	    this.x = afterX;
	    this.y = afterY;
	}
	context.fillStyle = 'grey';
	context.fillRect(this.x, this.y, 10, 10);
    };
}
